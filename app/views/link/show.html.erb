<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <p> Here is your short link </p>
  <table>
    <tr>
      <td><h3>Title</h3></td>
      <td><h3>Url</h3></td>
    </tr>
    <% @yourlink.each do |link| %>
      <% @url_extension = link.id.to_s(36) %>
      <% @host = request.domain %>
      <% @short_url = "https://url-shortener-zedgell.herokuapp.com/#{@url_extension}" %>
      <tr>
        <td><%= link.title.nil? ? 'N/A' : link.title.truncate_words(4) %></td>
        <td><%= link_to("#{@short_url}", @short_url) %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= link_to '<button type="button">Home</button>'.html_safe, root_path %>
</div>